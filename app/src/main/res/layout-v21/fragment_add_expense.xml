<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/tab_bck"
    android:fitsSystemWindows="false"
    design:layout_collapseParallaxMultiplier="1.0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:design="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_bck"
            android:orientation="vertical"
            android:weightSum="1">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <Spinner
                    android:id="@+id/s_category"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="@dimen/normal_v_margin"
                    android:background="@color/tab_bck"
                    android:paddingBottom="2dp"
                    android:elevation="4dp"

               />




                <EditText
                    android:id="@+id/expense_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="@id/s_category"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="85dp"
                    android:layout_toEndOf="@+id/s_category"
                    android:hint="Name"
                    android:inputType="text"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:textColorLink="@color/text" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/expense_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_v_margin"
                    android:layout_weight="0.5"
                    android:hint="00,00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text" />

                <Spinner
                    android:id="@+id/currencies_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/normal_v_margin"
                    android:layout_weight="0.5"
                    android:entries="@array/country_arrays"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/BuyerSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="@dimen/normal_v_margin"
                    android:layout_weight="0.5"
                    android:spinnerMode="dialog" />

                <ImageButton
                    android:id="@+id/calendar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.20"
                    android:background="@color/tab_bck"
                    android:contentDescription="Calendar"
                    android:elevation="2dp"
                    android:gravity="end"
                    android:onClick="showDatePickerDialog"
                    android:src="@drawable/img_cal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/attach_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/normal_v_margin"
                    android:layout_weight="0.5"
                    android:background="@color/tab_bck"
                    android:src="@drawable/img_img" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_weight="0.5"
                    android:text="Add a Photo"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"

                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    android:padding="4dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:backgroundTint="@color/tab_bck"
                    android:elevation="30dp"
                    android:translationZ="40dp"
                   />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:outlineProvider="bounds"
                android:weightSum="1"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/attach_pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/normal_v_margin"
                    android:layout_weight="0.5"
                    android:background="@color/tab_bck"
                    android:clipToPadding="false"

                    android:src="@drawable/img_pdf" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/tab_bck"


                    android:backgroundTintMode="src_in"
                    android:elevation="30dp"
                    android:text="Add a PDF"

                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/text"
                    android:textSize="24sp"
                    android:translationZ="40dp"
                    tools:backgroundTintMode="src_in" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/preview"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                     />

                <TextView
                    android:id="@+id/pdfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/preview"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:textColor="@color/text"
                    android:textSize="24sp" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"

        android:background="@color/tab_bck"
        android:clipToPadding="false"
        android:elevation="6dp"
        android:outlineProvider="background"
        design:itemIconTint="@color/text"

        design:itemTextColor="@color/text"
        design:menu="@menu/bottom_nav_bar_add"

        >
        <View android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/myrect"/>

    </android.support.design.widget.BottomNavigationView>


</android.support.design.widget.CoordinatorLayout>