<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    android:weightSum="1"
    android:background="@color/tab_bck">



    <ImageView android:id="@+id/expIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/expName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/expPrice"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/expIcon"
        android:layout_toRightOf="@+id/expIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Birra"
        android:textColor="@color/text"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/buyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expName"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/expName"
        android:layout_toEndOf="@+id/expIcon"
        android:layout_toRightOf="@+id/expIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="we UAJO BELL STU OROLOGIO"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/expPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/expCurrency"
        android:layout_alignBottom="@+id/expCurrency"
        android:layout_toLeftOf="@+id/expCurrency"
        android:layout_toStartOf="@+id/expCurrency"
        android:gravity="center"
        android:text="50"
        android:textColor="@color/text"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/expCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:text="â‚¬"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />


</RelativeLayout>