<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="it.polito.mad17.viral.sliceapp.Choose_how_to_pay"
    android:background="@color/tab_bck">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <android.support.v7.widget.CardView
          android:layout_centerVertical="true"
          android:layout_width="match_parent"
          android:layout_height="450dp"
          app:cardElevation="2dp"
          android:layout_margin="5dp"
          android:backgroundTint="#DADFE1">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="EXPENSE SUMMARY"
              android:textSize="20sp"
              android:textColor="@color/text"
              android:layout_centerHorizontal="true"
              android:textAlignment="center"
              android:textStyle="italic"
              android:layout_margin="10dp"
              android:id="@+id/Summary"/>


          <TextView
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:text="Expense Name: "
              android:layout_below="@id/Summary"
              android:textSize="18sp"
              android:textColor="@color/text"
              android:id="@+id/summary_name_txt"
              android:layout_margin="10dp"
              />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Birra"
                  android:ellipsize="end"
                  android:layout_below="@id/Summary"
                  android:layout_toRightOf="@id/summary_name_txt"
                  android:textSize="18sp"
                  android:textColor="@color/text"
                  android:id="@+id/summary_name_show"
                  android:layout_margin="10dp"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Buyer: "
                  android:layout_below="@id/summary_name_txt"
                  android:textSize="18sp"
                  android:textColor="@color/text"
                  android:id="@+id/buyer_txt"
                  android:layout_margin="10dp"
                  />
              <TextView
                  android:layout_centerHorizontal="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Calogero Carrabbotta "
                  android:layout_below="@id/summary_name_txt"
                  android:textSize="18sp"
                  android:ellipsize="end"
                  android:textColor="@color/text"
                  android:layout_toRightOf="@id/buyer_txt"
                  android:maxLines="1"
                  android:id="@+id/buyer_show"
                  android:layout_margin="10dp"
                  />
              <TextView
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:text="Price:"
                  android:layout_below="@id/buyer_txt"
                  android:textSize="18sp"
                  android:textColor="@color/text"
                  android:id="@+id/import_txt"
                  android:layout_margin="10dp"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="123,00â‚¬ "
                  android:layout_below="@id/buyer_show"
                  android:textSize="18sp"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:textColor="@color/text"
                  android:layout_toRightOf="@id/import_txt"
                  android:id="@+id/import_show"
                  android:layout_margin="10dp"
                  />
              <TextView
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:text="Selected Data:"
                  android:layout_below="@id/import_txt"
                  android:textSize="18sp"
                  android:textColor="@color/text"
                  android:id="@+id/date_txt"
                  android:layout_margin="10dp"
                  />
              <TextView
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:text="17/10/1992 "
                  android:layout_below="@id/import_show"
                  android:textSize="18sp"
                  android:textColor="@color/text"
                  android:id="@+id/date_show"
                  android:layout_toRightOf="@id/date_txt"
                  android:layout_margin="10dp"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Attached Photo:         Yes "
                  android:layout_below="@id/date_txt"
                  android:textSize="18sp"
                  android:textColor="@color/text"
                  android:id="@+id/photo_txt"
                  android:layout_margin="10dp"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Attached PDF:            No "
                  android:layout_below="@id/photo_txt"
                  android:textSize="18sp"
                  android:textColor="@color/text"
                  android:id="@+id/pdf_txt"
                  android:layout_margin="10dp"
                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Policy is:"
                  android:layout_below="@id/pdf_txt"
                  android:textSize="18sp"
                  android:textColor="@color/text"
                  android:id="@+id/policy_txt"
                  android:layout_margin="10dp"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Customized"
                  android:layout_below="@id/pdf_txt"
                  android:textSize="18sp"

                  android:layout_centerHorizontal="true"
                  android:textColor="@color/text"
                  android:id="@+id/policy_show"
                  android:layout_margin="10dp"
                  />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Confirm Expense"
                  android:background="#DADFE1"
                  android:layout_centerHorizontal="true"
                  android:textSize="20sp"
                  android:id="@+id/save_btn"
                  android:layout_alignParentBottom="true"
                  android:textColor="@color/colorPrimary"
                  android:layout_below="@id/policy_show"/>

          </RelativeLayout>
      </android.support.v7.widget.CardView>


    </RelativeLayout>
    </ScrollView>
</FrameLayout>
