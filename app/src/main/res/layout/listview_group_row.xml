<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="10dp"
    android:background="@color/tab_bck">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:src="@drawable/img_gruppi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="The big gangbang theory"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/imgIcon"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        />

    <TextView
        android:id="@+id/unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#F9690E"
        android:text="22"
        android:gravity="end"
        android:layout_weight="0.10"
        android:layout_marginRight="15dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginEnd="15dp"
        android:layout_alignBottom="@+id/groupName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/last"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="#6C7A89"
        android:ellipsize="end"
        android:text="WE UAJO BELL STU OROLOGIO"
        android:layout_alignBottom="@+id/groupName"
        android:layout_toRightOf="@+id/valuta"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"


       />

    <TextView

        android:layout_width="80dp"
        android:layout_height="18dp"
            android:text="QAR-ï·¼"

        android:textColor="#6C7A89"
        android:id="@+id/valuta"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/imgIcon" />





</RelativeLayout>