<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tab_bck"
    android:id="@+id/c2">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cv1"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        app:cardElevation="2dp"
        android:backgroundTint="#DADFE1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_gruppi"
          android:layout_margin="10dp"
            android:id="@+id/group_pic"/>

            <TextView
                android:layout_below="@id/group_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text"
                android:text="Gruppo A"
                android:textAlignment="center"
                android:id="@+id/name_group"
                android:textSize="20sp"
                android:layout_marginTop="5dp"

          />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/change_name"
                android:src="@drawable/img_pencil"
                android:background="#DADFE1"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"

               />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/change_propic"
                android:src="@drawable/img_modify_pic"
                android:background="#DADFE1"
                android:layout_margin="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_below="@id/cv1"
            android:backgroundTint="#DADFE1"
            android:layout_margin="5dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <android.support.v7.widget.RecyclerView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/partecipanti"
              />
        </android.support.v7.widget.CardView>



    <ImageView
        android:id="@+id/expanded_image_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="12dp"
        android:visibility="invisible" />

</RelativeLayout>
